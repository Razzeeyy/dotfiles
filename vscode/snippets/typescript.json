{
	"Vue Prop": {
		"prefix": "vp",
		"body": [
			"@Prop($1) readonly $2?: ${1/(.*)/${1:/downcase}/gi};"
		],
		"description": "Vue Prop"
	},

	"Vue Prop Default": {
		"prefix": "vpd",
		"body": [
			"@Prop({ type: $1, default: $2 }) readonly $3!: ${1/(.*)/${1:/downcase}/gi};"
		],
		"description": "Vue Prop Default"
	},

	"Vue Prop Required": {
		"prefix": "vpr",
		"body": [
			"@Prop({ type: $1, required: true }) readonly $2!: ${1/(.*)/${1:/downcase}/gi};"
		],
		"description": "Vue Prop Required"
	},

	"Prettier Ignore": {
		"prefix": "/pi",
		"body": [
			"// prettier-ignore"
		],
		"description": "Insert prettier ignore directive"
	}
}
